(
    wall
    {
        type wall;
        faces
        (
	    (2 6 5 1)
	    (0 4 7 3)
	    (3 7 6 2)
        (1 5 4 0)
	    (0 3 2 1)
		(4 5 6 7)
        );
    }
   
    
  
);

